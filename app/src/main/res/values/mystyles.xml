<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BtnStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/keyboardround</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="BtnOKStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">27dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="InfoStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="PayStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>


</resources>


