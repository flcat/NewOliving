<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_line"
    android:layout_width="match_parent"
    android:layout_height="470dp"
    android:layout_centerInParent="true"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/normalItem"
        android:background="@drawable/round"
        android:layout_margin="10dp"
        android:elevation="1dp"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a0a0a0" />

        <LinearLayout
            android:id="@+id/cateLI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정관장골드"
                android:textColor="#000000"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_margin="6dp"/>

            <TextView
                android:id="@+id/txtCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,000"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginRight="8dp"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a0a0a0" />

        <LinearLayout
            android:id="@+id/itemLI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="6">



            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:textStyle="bold"
                android:text="정관장골드"
                android:textColor="#000000"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:weightSum="5">

                <TextView
                    android:id="@+id/item_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1 Kg"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5">

                </Space>

                <TextView
                    android:id="@+id/item_cost"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="9,900"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="3"
                android:id="@+id/origindateLi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="원산지:노르웨이"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="유통기한:0000.00.00까지"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/solidout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sold_out"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/checkbtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:translationZ="90dp"
        android:background="@drawable/check_btn"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/memo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:translationZ="90dp"
        android:background="@drawable/exclamation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ItemNotice"
        android:background="@drawable/noticeround2"
        android:layout_margin="10dp"
        android:elevation="1dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/noticeround">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품 요약"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:id="@+id/notice_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품명: 가나다라마바사"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="6dp"/>

            <TextView
                android:id="@+id/notice_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원산지: 대한민국"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/notice_lifeday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유통기한: ~2021.08.12"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/notice_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원재료명: 제품 별도 표기"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:lineSpacingExtra="12dp"
                android:layout_margin="6dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/MoreInfoBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="상품 상세보기"
                android:background="@drawable/startbtn_round"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>